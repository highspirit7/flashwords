{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "preserveSymlinks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["../src/*"],
      "@server/*": ["../../server/src/*"]
    }
  }
}
